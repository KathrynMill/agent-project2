{
  "name": "echo-command-frontend",
  "version": "1.0.0",
  "description": "Echo Command 前端应用",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "vue",
    "voice-control",
    "ai"
  ],
  "author": "Echo Command Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "pinia": "^2.1.7",
    "vue-router": "^4.2.5",
    "axios": "^1.6.2",
    "element-plus": "^2.4.4",
    "@element-plus/icons-vue": "^2.1.0",
    "mitt": "^3.0.1"
  },
  "build": {
    "appId": "com.echocommand.app",
    "productName": "Echo Command",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "public/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}



