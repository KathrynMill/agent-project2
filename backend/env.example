# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Application Configuration
APP_NAME=EchoCommand
APP_VERSION=1.0.0
DEBUG=True
HOST=127.0.0.1
PORT=8000

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_CHANNELS=1

# TTS Configuration
TTS_RATE=200
TTS_VOLUME=0.9
TTS_VOICE_ID=0

# System Control Configuration
AUTO_SAFETY=True
COMMAND_DELAY=0.1
SCROLL_AMOUNT=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/echo_command.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days



